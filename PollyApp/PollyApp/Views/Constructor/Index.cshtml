<script src="~/Scripts/App/Controllers/constructorController.js"></script>
<script src="~/Scripts/App/Directives/enterDirective.js"></script>
<div ng-controller="constructorController as mainCtrl" ng-init="mainCtrl.init();">
    <section class="container-fluid intro">
        
    </section>
    <section class="container-fluid add-poll">
           
        <div ng-include src="template">


        </div>
        
        <div class="row text-center footer">
            <a ng-href="" ng-click="changeTemplate()" ng-show="count==1 || count==2"><button type="button" class="btn btn-install">Next</button></a>
