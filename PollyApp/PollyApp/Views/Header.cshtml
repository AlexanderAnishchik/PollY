                            {
                                <li><button type="button" class="btn btn-success" id="signInBtn" data-toggle="modal" data-target="#login">SIGN IN</button></li>
                            }
                            @if (Request.IsAuthenticated)
                            {


                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" >{{ headerData.user.FirstName }} {{headerData.user.LastName}}<span class="caret"></span></a>
                                    <ul class="dropdown-menu">

