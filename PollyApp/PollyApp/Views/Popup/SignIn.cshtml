<!--AUTH MODAL BLOCK -->
<div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">

    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <div class="center">

                <img src="~/Content/images/pollylogogreen.png" />

            </div>
            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">SIGN IN</h4>

            </div>
            <form method="POST" name="signinForm" novalidate>
                <div id="form_login">
                    <div class="modal-body">

                        <div class="input-group input-group-lg textbox" ng-class="{'has-error' : !signinForm.email.$pristine && signinForm.email.$invalid, 'has-success' : !signinForm.email.$pristine && signinForm.email.$valid}">
                            <span class="input-group-addon" id="sizing-addon1"><img src="~/Content/images/email.png" /></span>
                            <input type="email" ng-model="headCtrl.login.email" name="email" class="form-control" placeholder="E-mail" aria-describedby="sizing-addon1" required>

                        </div>
                        <div class="alert alert-danger" ng-show="signinForm.email.$invalid && !signinForm.email.$pristine">
                            Please, enter correct e-mail!
                        </div>
                        <div class="input-group input-group-lg textbox" ng-class="{'has-error' : !signinForm.password.$pristine && signinForm.password.$invalid, 'has-success' : !signinForm.password.$pristine && signinForm.password.$valid}">
                            <span class="input-group-addon" id="sizing-addon1"><img src="~/Content/images/password.png" /></span>
                            <input type="password" ng-model="headCtrl.login.password" name="password" ng-minlength="5" ng-maxlength="15" class="form-control" placeholder="Password" aria-describedby="sizing-addon1" required>
                        </div>
                        <div class="alert alert-danger" ng-show="signinForm.password.$invalid && !signinForm.password.$pristine">
                            Please enter password from 5 to 15 symbols!
                        </div>
                    </div>
                    <div class="modal-footer">
                        <small>If you don't have account you can register!</small>
                        <button type="button" class="btn btn-success" data-dismiss="modal" data-toggle="modal" href="#register">SIGN UP</button>
                        <button type="button" ng-disabled="signinForm.$invalid" ng-click="headCtrl.signIn()" class="btn btn-default" id="signInBtn">SIGN IN</button>
                    </div>
                </div>
            </form>
</div>
    </div>

</div>


