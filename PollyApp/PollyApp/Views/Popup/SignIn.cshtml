<!--AUTH MODAL BLOCK -->
<div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">

    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <div class="center">

                <img src="~/Content/images/pollylogogreen.png" />

            </div>
            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">SIGN IN</h4>

            </div>
            <div id="form_login">
                <div class="modal-body">

                    <div class="input-group input-group-lg textbox">
                        <span class="input-group-addon" id="sizing-addon1"><img src="~/Content/images/email.png" /></span>
                        <input type="email" ng-model="headCtrl.login.email" class="form-control" placeholder="E-mail" aria-describedby="sizing-addon1">

                    </div>
                    <div class="input-group input-group-lg textbox">
                        <span class="input-group-addon" id="sizing-addon1"><img src="~/Content/images/password.png" /></span>
                        <input type="password" ng-model="headCtrl.login.password" class="form-control" placeholder="Password" aria-describedby="sizing-addon1">

                    </div>


                </div>
                <div class="modal-footer">
                    <small>If you don't have account, you can register</small>
                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#register" data-dismiss="modal">SIGN UP</button>
                    <button type="button" ng-click="headCtrl.signIn()" class="btn btn-default" id="signInBtn">SIGN IN</button>
                </div>
            </div>
        </div>
    </div>

</div>


