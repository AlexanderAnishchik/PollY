@using PollyApp.Helpers;
@model SafeAdmission

@{
    ViewBag.Title = "Access to poll";
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width; initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/css/style.css" />
    <link rel="stylesheet" href="~/Content/css/animate.css" />
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
    <script src="~/Scripts/jquery-1.11.3.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/ui-bootstrap-tpls-1.0.3.js"></script>
</head>
<body style="background: url(../Content/images/bgroad.png) !important; background-repeat:no-repeat; background-size:cover !important; background-position:center;">
    <div class="container text-center access-page">
        <div class="row">
            <a href="/"><img src="~/Content/images/pollylogogreen.png" /></a>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-4 col-sm-8 col-xs-10 col-lg-offset-3 col-md-offset-4 col-sm-offset-2 col-xs-offset-1">
                <div class="col-lg-10 col-lg-offset-1 card">
                    <div class="title">
                        Enter an access code
                    </div>
                    <div class="content-card">
                        @using (Html.BeginForm("ValidateCode", "Admission"))
                        {
                            if (ViewBag.Error != null)
                            {
                                <div class="text-danger">
                                    <small>@ViewBag.Error</small>
                                </div>
}

                            <div class="form-group">
                                <input class="form-control" placeholder="Access code" name="access_code" />
                            </div>
                        @Html.HiddenFor(model => model.projectUrl, new { id = "projectUrl",name= "projectUrl" })
                        <div class="">
                            <button type="submit" class="btn btn-success btn-lg btn-block"><img src="~/Content/images/unlocked-padlock.png" /></button>
                        </div>
                        }
                    </div>
                </div>
            </div>
            
        </div>
    </div>

</body>
</html>
