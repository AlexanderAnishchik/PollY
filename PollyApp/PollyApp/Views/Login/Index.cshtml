@{
    ViewBag.Title = "Enter your credentials";
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width; initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/css/style.css" />
    <link rel="stylesheet" href="~/Content/css/animate.css" />
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
    <script src="~/Scripts/jquery-1.11.3.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/ui-bootstrap-tpls-1.0.3.js"></script>
    <script src="~/Scripts/App/app.js"></script>
    <script src="~/Scripts/App/Factory/pollSettingsFactory.js"></script>
    <script src="~/Scripts/App/Services/headerKeeperService.js"></script>
    <script src="~/Scripts/App/Controllers/headerController.js"></script>
</head>
<body ng-app="Polly" style="background: url(../Content/images/bgroad.png) !important; background-repeat:no-repeat; background-size:cover !important; background-position:center;">
    <div class="container text-center access-page">
        <div class="row">
            <img src="~/Content/images/pollylogogreen.png" />
        </div>
        <div class="row" ng-controller="headerController as headCtrl">
            <div class="col-lg-6 col-md-4 col-sm-8 col-xs-10 col-lg-offset-3 col-md-offset-4 col-sm-offset-2 col-xs-offset-1">
                <div class="card col-lg-10 col-lg-offset-1">
                    <small class="text-danger" ng-show="errorAuth!=''">{{errorAuth}}</small>
                    <div class="title">
                        Enter your credentials
                    </div>

                    <div class="content-card">
                        <form name="login">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Email" name="email" ng-model="headCtrl.login.email" />
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="Password" name="password" ng-model="headCtrl.login.password" />
                            </div>
                            <div class="">
                                <button type="button" class="btn btn-success btn-lg btn-block" ng-click="headCtrl.signIn()">Continue</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>

</body>
</html>
